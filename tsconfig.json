{
  "compilerOptions": {
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "config/*": ["src/config/*"],
      "controllers/*": ["src/controllers/*"],
      "entities/*": ["src/entities/*"],
      "errors/*": ["src/errors/*"],
      "frameworks/*": ["src/frameworks/*"],
      "repositories/*": ["src/repositories/*"],
      "services/*": ["src/services/*"],
      "useCases/*": ["src/useCases/*"]
    }
  },
  "include": ["src"]
}
